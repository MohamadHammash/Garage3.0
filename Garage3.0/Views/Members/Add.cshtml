@model MembersAddViewModel

@{
    ViewData["Title"] = "Add";
}

<h1 class="text-warning text-center">Add Member</h1>


<hr />
<div class="row justify-content-center  myTable text-black">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input placeholder="Enter your first name" asp-for="FirstName" class="form-control bg-dark text-white" />
                <span asp-validation-for="FirstName" class="text-danger myTable"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input placeholder="Enter your last name" asp-for="LastName" class="form-control bg-dark text-white" />
                <span asp-validation-for="LastName" class="text-danger myTable"></span>
            </div>
            <div class="form-group">
                <label asp-for="Personnummer" class="control-label"></label>
                <input placeholder="YYYYMMDD-xxxx" asp-for="Personnummer" class="form-control bg-dark text-white" />
                <span asp-validation-for="Personnummer" class="text-danger myTable"></span>
            </div>
