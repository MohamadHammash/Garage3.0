@model MembersDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-warning text-center"> Members Details</h1>

<div>
   
    <hr />
    <dl class="row myTable justify-content-center text-black">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Personnummer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Personnummer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MbShipRegDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MbShipRegDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProEndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProEndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VehiclesOwned)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VehiclesOwned)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicles)
        </dt>
        <dd class="col-sm-10">
            @foreach (var vehicle in Model.Vehicles)
            {
                <a asp-controller="Vehicles" asp-action="Details" asp-route-id="@vehicle.Id">@vehicle.RegNr </a><br />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> 
    <a asp-action="Index" class="btn btn-warning">Back to List</a>
</div>
