@model Garage3._0.Models.Entities.Vehicle

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-warning text-center">Edit Vehicle</h1>



<hr />
<div class="row justify-content-center text-white"    >
    <div class="col-md-4">
