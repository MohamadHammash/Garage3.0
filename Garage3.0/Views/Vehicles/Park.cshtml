@model VehiclesParkViewModel
@inject ITypeSelectService typeSelectService
@inject IMemberSelectService memberSelect
@{ ViewData["Title"] = "Park"; }

<h1>Park</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Vehicles" asp-action="Park">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input placeholder="Enter the brand's name" asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger myTable"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input placeholder="Enter the model's name" asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger myTable"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input placeholder="Enter the color" asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger myTable"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegNr" class="control-label"></label>
                <input placeholder="Enter the license number" asp-for="RegNr" class="form-control" />
                <span asp-validation-for="RegNr" class="text-danger myTable"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfWheels" class="control-label"></label>
                <input placeholder="Enter the number of wheels" asp-for="NumberOfWheels" class="form-control" />
                <span asp-validation-for="NumberOfWheels" class="text-danger myTable"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleTypeId" class="control-label"></label>
                <select class="form-control" asp-for="VehicleTypeId" asp-items="@await typeSelectService.GetTypeAsync()">
                    <option selected="selected" value="">Please select a type</option>
                </select>
         
                <span asp-validation-for="VehicleTypeId" class="text-danger myTable"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberId" class="control-label"></label>
                <select class="form-control" asp-for="MemberId" asp-items="@await memberSelect.GetMemberAsync()">
                    <option selected="selected" value="">Please select the owner</option>

                </select>
                <span asp-validation-for="MemberId" class="text-danger myTable"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Park" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }