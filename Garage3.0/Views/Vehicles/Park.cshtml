@model VehiclesParkViewModel
@inject ITypeSelectService typeSelectService
@inject IMemberSelectService memberSelect
@{ ViewData["Title"] = "Park"; }

<h1 class="text-warning text-center">Park Vehicle</h1>


<hr />
<div class="row justify-content-center  myTable text-black">
    <div class="col-md-4">
        <form asp-controller="Vehicles" asp-action="Park">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input placeholder="Enter the brand's name" asp-for="Brand" class="form-control bg-dark text-white" />
                <span asp-validation-for="Brand" class="text-danger myTable"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input placeholder="Enter the model's name" asp-for="Model" class="form-control bg-dark text-white" />
                <span asp-validation-for="Model" class="text-danger myTable"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input placeholder="Enter the color" asp-for="Color" class="form-control bg-dark text-white" />
                <span asp-validation-for="Color" class="text-danger myTable"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegNr" class="control-label"></label>
                <input placeholder="Enter the license number" asp-for="RegNr" class="form-control bg-dark text-white" />
                <span asp-validation-for="RegNr" class="text-danger myTable"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfWheels" class="control-label"></label>
                <input placeholder="Enter the number of wheels" asp-for="NumberOfWheels" class="form-control bg-dark text-white" />
                <span asp-validation-for="NumberOfWheels" class="text-danger myTable"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleTypeId" class="control-label"></label>
                <select  asp-for="VehicleTypeId" asp-items="@await typeSelectService.GetTypeAsync()" class="form-control bg-dark text-white">
                    <option selected="selected" value="">Please select a type</option>
                </select>
         
                <span asp-validation-for="VehicleTypeId" class="text-danger myTable"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberId" class="control-label"></label>
                <select class="form-control bg-dark text-white" asp-for="MemberId" asp-items="@await memberSelect.GetMemberAsync()">
                    <option selected="selected" value="">Please select the owner</option>

                </select>
                <span asp-validation-for="MemberId" class="text-danger myTable"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Park" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-warning" >Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }